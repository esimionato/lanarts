
// lets say we want to take GameInst* and write an ID

template <typename T>
void serialize(Struct s, T& serializer) {
	serializer.writeread(s.foo);
	serializer.write(s.inst->id)
	serializer.gamestate().get_instance(serializer.read<int>());
}



